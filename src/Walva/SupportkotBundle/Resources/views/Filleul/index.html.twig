{% extends "WalvaSupportkotBundle:Filleul:layout.html.twig" %}


{% block breadcrumb %}
{{ parent() }}
<li class="active">list</li>
{% endblock %}
    
    
    
{% block body %}
    <h1>Filleul list</h1>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Fac</th>
                <th>Annee</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('filleul_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.nom }}</td>
                <td>{{ entity.prenom }}</td>
                <td>{{ entity.faculte | walva_label(entity.faculte.couleur) | raw }}</td>
                <td>{{ entity.annee | walva_label(entity.annee.couleur) | raw }}</td>
                
                <td>
                <ul>
                    <div class="btn-group">
                        <a class="btn" href="{{ path('filleul_show', { 'id': entity.id }) }} ">
                            <i class="icon-eye-open"></i> Show</a>
                        <a class="btn" href="{{ path('filleul_edit', { 'id': entity.id }) }}">
                            <i class="icon-pencil"></i> Edit</a>
                    </div>
                    
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {% endblock %}

    {% block container_header_right %}
        <a class="btn btn-primary" href="{{ path('filleul_new') }}">
            <i class="icon-plus icon-white"></i> 
            Create a new entry
        </a>
{% endblock %}