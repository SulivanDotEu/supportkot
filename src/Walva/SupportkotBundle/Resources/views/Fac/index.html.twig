{% extends "WalvaSupportkotBundle:parrain:layout.html.twig" %}
{% set current_page = 'list' %}

{% block container %}
{% block breadcrumb -%}{% endblock %}
    <h1>Fac list</h1>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('fac_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.nom | walva_label(entity.couleur) | raw }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('fac_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('fac_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('fac_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
