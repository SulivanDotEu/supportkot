{# app/Resources/views/layout.html.twig #}

<!DOCTYPE html>
<html>
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0">

        <title>{% block title %}Support Kot{% endblock %}</title>

    {% block stylesheets %}

        <link rel="stylesheet" href="{{ asset('css/bootstrap.css') }}" type="text/css" />
        <link rel="stylesheet" href="{{ asset('css/bootstrap-responsive.css') }}" type="text/css" />
        <link rel="stylesheet" href="{{ asset('css/supportkot.css') }}" type="text/css" />
    {% endblock %}
    </head>

    <body>
        <div class="navbar navbar-static-top">

            <div class="navbar-inner">
                <div class="container">

                    <div class="pull-right">
{% if is_granted('IS_AUTHENTICATED_FULLY') == false %}


                            <div class="btn-group">
                                <a class="btn btn-inverse " href="{{ path('fos_user_security_login')}}">
                                    <i class="icon-lock icon-white"></i>
                                    Se connecter
                                </a>
                                <a class="btn btn-inverse dropdown-toggle" data-toggle="dropdown" href="#">
                                    <i class="icon-user icon-white"></i>
                                    S'inscrire
                                    <span class="caret"></span>
                                </a>
                                <ul class="dropdown-menu">
                                    <li><a href="{{ path('fos_user_registration_register_2', {'type_inscription':'parrain'}) }}">
                                            En tant que <b>parrain</b></a></li>
                                    <li><a href="{{ path('fos_user_registration_register_2', {'type_inscription':'filleul'}) }}">
                                            En tant que <b>filleul</b></a></li>

                                </ul>
                            </div>
                                 {% else %}
                            <a class="btn btn-inverse " href="{{ path('fos_user_security_logout')}}">
                                <i class="icon-lock icon-white"></i>
                                Se déconnecter
                            </a>
                                 {% endif %}
                        </div>

                        <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </a>
                        <div class="nav-collapse">
                        {% include "::menu.html.twig" %}

                            </div><!--/.nav-collapse -->

                        </div>
                    </div>
                </div>
                <div id="header" class="">
                    <div class="container">

                        <div class="row">
                            <div class="span7">
                                    {% block header %}
                                    <h1>Support Kot</h1>
                                    <p>Site du kot à projet de l'UCL qui guide les
                                        nouveaux étudiants sur le campus</p>
                                     {% endblock %}
                                </div>
                                <div class="span5">
                                    <img src="{{ asset('img/logosk.png') }}">
                                </div>
                            </div>


                        </div>
                    </div>
                    <div class="container" id="mainContainer">
                        <div class="row">
                    {% block container %}
{% block container_header %}
                                <div id="content" class="span12">
                                    <div class="row-fluid">
                                        <div class="span8">
                                            <ul class="breadcrumb">

                        {% block breadcrumb %}
                                                <li><a href="#">Support kot</a> <span class="divider">/</span></li>
                            {% endblock %}

                                                </ul>
                                            </div>
                                            <div class="span4">
                                                <div class="pull-right">
                                        {% block container_header_right %}
                                    {% endblock %}
                                                    </div>
                                                </div>  
                                            </div>



                                        {% endblock %}
          {% block body %}
          {% endblock %}
                                        </div>
                        {% endblock %}
                                    </div>

                                    <hr>

                                    <footer>
                                        <p>Support Kot &AMP; Benjamin Ellis © 2013 and beyond.</p>
                                    </footer>
                                </div>

  {% block javascripts %}
    {# Ajoutez ces lignes JavaScript si vous comptez vous servir des fonctionnalités du bootstrap Twitter #}
                                <script src="//ajax.googleapis.com/ajax/libs/jquery/1.7.2/jquery.min.js"></script>
                                <script type="text/javascript" src="{{ asset('js/bootstrap.js') }}"></script>
  {% endblock %}

                            </body>
                        </html>