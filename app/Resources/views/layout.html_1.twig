{# app/Resources/views/layout.html.twig #}

<!DOCTYPE html>
<html>
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0">

        <title>{% block title %}Support Kot{% endblock %}</title>

    {% block stylesheets %}

        <link rel="stylesheet" href="{{ asset('css/bootstrap.css') }}" type="text/css" />
        <link rel="stylesheet" href="{{ asset('css/bootstrap-responsive.css') }}" type="text/css" />
        <link rel="stylesheet" href="{{ asset('css/supportkot.css') }}" type="text/css" />
    {% endblock %}
    </head>

    <body>
        <div class="navbar navbar-static-top">
            <div class="navbar-inner">
                <div class="container">
                    <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </a>
                    <div class="nav-collapse">
                        {% include "::menu.html.twig" %}

                        </div><!--/.nav-collapse -->

                    </div>
                </div>
            </div>
            <div id="header" class="">
                <div class="container">
{% block header %}
                        <h1>Support Kot</h1>
                        <p>Site du kot à projet de l'UCL qui guide les
                            nouveaux étudiants sur le campus</p>
                {% endblock %}

                    </div>
                </div>
                <div class="container" id="mainContainer">
                    <div class="row">
                    {% block container %}
                            <div id="menu" class="span3">

                        {% block left_menu %}
          {% endblock %}


          {#{ render(controller("SdzBlogBundle:Blog:menu", {'nombre': 3})) }#}
                            </div>
                            <div id="content" class="span9">
                                <ul class="breadcrumb">

                        {% block breadcrumb %}
                                    <li><a href="#">Support Kot</a> <span class="divider">/</span></li>
                            {% endblock %}


                                </ul>
          {% block body %}
          {% endblock %}
                            </div>
                        {% endblock %}
                        </div>

                        <hr>

                        <footer>
                            <p>Support Kot &AMP; Benjamin Ellis © 2013 and beyond.</p>
                        </footer>
                    </div>

  {% block javascripts %}
    {# Ajoutez ces lignes JavaScript si vous comptez vous servir des fonctionnalités du bootstrap Twitter #}
                    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.7.2/jquery.min.js"></script>
                    <script type="text/javascript" src="{{ asset('js/bootstrap.js') }}"></script>
  {% endblock %}

                </body>
            </html>